server {
    include universal-server.conf;
    server_name example.net;
    include cert/cert.conf;
    access_log /var/log/nginx/example.net.log combined;

    # client_max_body_size 100M;

    location / {
        include universal-location.conf;
        root /path/to/root;
        # 通过仅仅将 URI 添加到 root 指令的值来构造文件的路径。如果需要修改 URI，则应使用 alias 指令。
        # index file ...; # http, server, location
    }
}